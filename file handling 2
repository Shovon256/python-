file_read = open('codingal.txt', 'r')
print("Contents of the file:")
print(file_read.read())
file_read.close()

file_write = open('codingal.txt', 'w')
print("Writing to the file...")
file_write.write("This is a sample text written to the file.")
file_write.write("I am like codingal")
file_write.close()

file_append = open('codingal.txt', 'a')
print("Appending to the file...")
file_append.write("This line is appended to the file.")
file_append.write("The file is opening in append mode")
file_append.write("It's a very good platform to learn coding")
file_append.close()

